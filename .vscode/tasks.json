{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/cc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Werror",
                "-Wextra",
                "-Wall",
                "*.c",
                "libft/*.c",
                "-lreadline",
                "-o",
                "a.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}